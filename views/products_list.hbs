<input type="hidden" id="carritoId" value="{{carritoId}}"/>
<div class="row" style="height:50px;"><h2>Lista de productos</h2></div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <table class="table table-dark" id="tablaProductos">
            {{#if hayProductos}}
            <thead>
                <tr>
                <th scope="col">ID</th>
                <th scope="col">Nombre</th>
                <th scope="col">Precio</th>
                <th scope="col">Imagen</th>
                <th scope="col">Carrito</th>
                {{#if admin}}<th scope="col">Acciones</th>{{/if}}
                </tr>
            </thead>
            <tbody>
                {{#each productList}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.title}}</td>
                        <td>{{this.price}}</td>
                        <td><img src="{{this.thumbnail}}" alt="{{this.title}}" height="50"></td>
                        <td>
                            <input type="number" id="cantidad_{{this.id}}" min="0" value="0" style="width:60px" class="form-inline" />
                            <button class="btn btn-success btn-sm active" onclick="agregarCarrito({{this.id}});" >+</button>
                        </td>
                        {{#if ../admin}}
                            <td>
                                <a class="btn btn-primary btn-sm active" href="modificar/{{this.id}}" >Modificar</a> 
                                <button class="btn btn-danger btn-sm active" onclick="borrarProd({{this.id}});" >Borrar</button>
                            </td>
                        {{/if}}
                    </tr>
                {{/each}}
            </tbody>
            {{else}}
            <tbody>
                    <tr>
                        <td>No hay productos para mostrar</td>
                    </tr>
            </tbody>
        {{/if}}
        </table>
        <a class="btn btn-primary btn-sm active" role="button" href="/carrito" >Ver carrito</a> 
        <a class="btn btn-info btn-sm active" role="button" href="/instrucciones_api" >Instrucciones para usar las APIs</a>
    </div>
    <div class="col-sm-2"></div>
</div>
{{#if admin}}
<div style="height:50px;">
    <h2>Agregar producto</h2>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <form id="agregarProductos" >
        <label for="title">Titulo:</label><br>
        <input class="form-control" type="text" id="title" name="title"><br>
        <label for="price">Precio:</label><br>
        <input class="form-control" type="number" step="0.01" id="price" name="price"><br>
        <label for="thumbnail">Thumbnail:</label><br>
        <input class="form-control" type="text" id="thumbnail" name="thumbnail"><br><br>
        <button class="btn btn-primary btn-sm active" name="submit" value="S" type="submit">Crear</button>
        </form> 
    </div>
    <div class="col-sm-2"></div>
</div>
{{/if}}
<div style="height:50px;">
    <h2>Caja de chat</h2>
</div>
<div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-8">
        <div class="chat">
            <div class="chat-history border border-secondary" id="chat-history" >
                <ul id="cajaChat">

                </ul>
            </div> 
            <br>
            <span>Usuario:</span> 
            <input class="form-control" type="text" name="usuario" id="usuario" placeholder="E-mail"/>
            <br>
            <span>Mensaje a enviar:</span> 
            <br>
            <textarea class="form-control" name="mensaje" id="mensaje" placeholder="Mensaje" rows="2" cols="50"></textarea>
            <button class="btn btn-primary btn-sm active" onclick="enviar();">Enviar</button>
        </div> 
    </div>
    <div class="col-sm-2"></div>
</div>


